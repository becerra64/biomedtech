<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SingUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/back" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:padding="7dp"
                        android:paddingBottom="7dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:srcCompat="@drawable/logo" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#FFFFFF"
                                android:text="BioMedTech"
                                android:textAlignment="viewEnd"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic information"/>

                    <EditText
                        android:id="@+id/fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top"
                        android:ems="10"
                        android:hint="full name"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="surname"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/given"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="given"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/prefix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="prefix"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/suffix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="suffix"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/birthday"
                        android:onClick="setBirthDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:focusable="false"
                        android:clickable="true"
                        android:maxLines="1"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp"/>

                    <Spinner
                        android:id="@+id/nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address information"/>

                    <Spinner
                        android:id="@+id/use"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <Spinner
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="address"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="city"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="district"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="state"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/postalcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="postal code"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="country"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact information"/>

                    <Spinner
                        android:id="@+id/system"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/valueSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="value"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <Spinner
                        android:id="@+id/useSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/rank"
                        android:digits="0123456789"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="rank"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comunication information"/>

                    <Spinner
                        android:id="@+id/lenguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact information"/>

                    <EditText
                        android:id="@+id/relationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="relationship"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/fullnameContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="full name contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/surnameContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="surname contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/givenContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="given contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/prefixContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="prefix contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/suffixContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="suffix contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />


                    <Spinner
                        android:id="@+id/systemContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/valueSystemContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="value contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <Spinner
                        android:id="@+id/useSystemContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/rankContact"
                        android:digits="0123456789"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="rank contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <Spinner
                        android:id="@+id/useAddressContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <Spinner
                        android:id="@+id/typeContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/addressContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="address contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/cityContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="city contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/districtContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="district contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/stateContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="state contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/postalcodeContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="postal code contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <EditText
                        android:id="@+id/countryContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_center"
                        android:ems="10"
                        android:hint="country contact"
                        android:inputType="text"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                    <Spinner
                        android:id="@+id/genderContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:ems="10"
                        android:layout_marginVertical="5dp"
                        android:padding="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/bottom"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Next" />

                        <TextView
                            android:id="@+id/textView8"
                            android:onClick="returnToLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Do you already have an account?"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>